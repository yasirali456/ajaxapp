<p id="notice"><%= notice %></p>

<h1>Sharks</h1>
<%= render 'form', shark: @shark %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Facts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sharks.each do |shark| %>
      <tr class="yasir-<%= shark.id %>">
        <td><%= shark.id %></td>
        <td><%= shark.name %></td>
        <td><%= shark.facts %></td>
        <td><%= link_to 'Show', shark %></td>
        <td><%= link_to 'Edit', edit_shark_path(shark) %></td>
        <td><%= link_to 'Destroy', shark, method: :delete, remote: :true%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shark', new_shark_path %>
